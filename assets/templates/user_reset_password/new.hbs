<div class="container mx-auto">  
  {{>authentication_station}}
  
  <div class="h-8"></div>

  {{#>page_title }}
    reset password
  {{/page_title}}

  <div class="h-4"></div>

  <div class="w-full bg-gray-900 p-4 rounded">
    <div class="max-w-md">
      <%= form_for :user, Routes.user_reset_password_path(@conn, :create), fn f -> %>
        <div class="space-y-4">
          <%= if not is_nil(assigns[:error_map]) do %>
            {{#>error_alert}}
              Please check the errors below.
            {{/error_alert}}
          <% end %>
          <div class="space-y-8">
             <div class="space-y-2">
                <%= label f, :email, "email", class: "{{>style_form_label}}" %>
                <%= email_input f, :email, class: "{{>style_form_text_input}}", placeholder: "email" %>
                <%= if not is_nil(assigns[:error_map]) and @error_map[:email] do %>
                  <div class="text-red-500 text-sm">
                    <%= @error_map[:email] %>
                  </div>
                <% end %>
              </div>
              <div>
                {{#>primary_button }}
                  reset password
                {{/primary_button}}
              </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>