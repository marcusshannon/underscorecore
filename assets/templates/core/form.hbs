<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <!-- Heroicon name: x-circle -->
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm leading-5 font-medium text-red-800">
            There were errors with your submission
          </h3>
        </div>
      </div>
    </div>
    <div class="h-4"></div>
  <% end %>

  <%= label f, :name, class: "block text-sm font-medium leading-5 text-gray-700" %>
  <div class="mt-1 relative rounded-md shadow-sm">
    <%= text_input f, :name, class: "form-input block w-full sm:text-sm sm:leading-5" %>
  </div>
  <%= error_tag f, :name %>
  <div class="h-4"></div>
  <span class="inline-flex rounded-md shadow-sm">
    <%= submit "Save", class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm leading-5 font-medium rounded-md text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:text-gray-800 active:bg-gray-50 transition ease-in-out duration-150" %>
  </span>
<% end %>
