<div class="container mx-auto">

  <div class="h-4"></div>

  {{#> page_title }}
    <%= @core.name %>
  {{/page_title}}

  <div class="flex">
    {{#> action_link }}
      <%= link "index", to: Routes.core_path(@socket, :index) %>
    {{/action_link}}
  </div>

  <div class="h-4"></div>

  <div class="grid grid-cols-3 gap-4">
    <%= for album <- @core_albums do %>
      <div>
        <a href="/albums/#{album.album_id}">
          <img class="block rounded shadow-lg" src="<%= album.artwork_url %>">
        </a>
        <div class="flex">
          {{#> action_link }}
          <span phx-click="delete" phx-value-album_id="<%= album.album_id %>">
            delete
          </span>
          {{/action_link}}
        </div>
      </div>
    <% end %>
  </div>
</div>