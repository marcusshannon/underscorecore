<div class="container mx-auto">
  {{>authentication_station}}

  <div class="h-4"></div>

  {{#>page_title }} 
    <%= @core.name %>
  {{/page_title}}

  <div class="h-2"></div>

  {{#>action_button_container}}
    {{#>action_button }}
      <%= link "edit", to: Routes.core_path(@conn, :edit, @core) %>
    {{/action_button}}
    {{#>action_button }}
      <%= link "add albums", to: "/cores/#{@core.id}/add" %>
    {{/action_button}}
    {{#>action_button }}
      <%= link "edit albums", to: "/cores/#{@core.id}/albums/edit" %>
    {{/action_button}}
  {{/action_button_container}}

  <div class="h-4"></div>

  <div class="grid grid-cols-3 gap-4">
    <%= for album <- @core_albums do %>
      <%= link to: "/albums/#{album.album_id}" do %>
        <img class="block rounded shadow-lg" src="<%= album.artwork_url %>">
      <% end %>
    <% end %>
  </div>
  

</div>
