<div class="container mx-auto">
  <div class="h-5"></div>

  {{#> page_title }}
    Add albums
  {{/page_title}}


  {{#> action_link }}
    <%= link "index", to: Routes.core_path(@conn, :index) %>
  {{/action_link}}

  <div class="h-4"></div>


  <%= if not is_nil(get_flash(@conn, :success)) do %>

  <div class="rounded-md bg-green-50 p-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <!-- Heroicon name: check-circle -->
        <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm leading-5 font-medium text-green-800">
          <%= get_flash(@conn, :success) %>
        </h3>
      </div>
    </div>
  </div>

  <% end %>

  <div class="h-4"></div>


  <%= form_for @conn, Routes.core_path(@conn, :show, @core), [as: :search], fn f -> %>
    <div class="flex">
      <%= text_input f, :term, class: "rounded form-input block sm:text-sm sm:leading-5 rounded-none", placeholder: "search for album/artist" %>
      <div class="w-2"></div>
      <span class="inline-flex rounded">
        <%= submit "Search", class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm leading-5 font-medium rounded text-black bg-white hover:text-gray-700 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:text-gray-800 active:bg-gray-50 transition ease-in-out duration-150" %>
      </span>
    </div>
  <% end %>

  <%= if not is_nil(assigns[:search_results]) and length(assigns[:search_results]) > 0 do %>
    <div class="h-4"></div>
    <div class="grid grid-cols-3 gap-4">
      <%= for {artist, album} <- @search_results do %>
        <div>
          <img class="block rounded shadow-lg" src="<%= album.artwork_url %>">
          <div class="h-1"></div>
          <div class="text-white text-sm truncate"><%= album.name %></div>
          <div class="text-white font-bold text-xs"><%= artist.name %></div>
          <%= form_for @conn, "/cores/#{@core.id}/add",  [as: :core_album, class: "leading-none"],  fn f -> %>
            <%= hidden_input f, :core_id, value: @core.id %>
            <%= hidden_input f, :album_id, value: album.id %>
            <%= submit "+Add" , class: "text-white underline text-xs" %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
